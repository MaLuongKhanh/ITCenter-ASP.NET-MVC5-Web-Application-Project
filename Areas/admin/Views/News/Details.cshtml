@model WebApplication.Models.News
@{
    ViewBag.Title = "Chi tiết tin tức";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

@section _Header {
    <style>
        .detail-item {
            margin-bottom: 1.5rem;
        }

        .detail-label {
            font-weight: 500;
            color: #ffffff;
            display: block;
            margin-bottom: 0.5rem;
        }

        .detail-value {
            color: #6c7293;
        }

        .content-preview {
            background: #2A3038;
            padding: 1rem;
            border-radius: 4px;
            margin-top: 0.5rem;
            display: block;
            overflow: hidden;
        }

        .content-preview img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 1rem 0;
        }

        .content-preview p {
            margin-bottom: 1rem;
        }
    </style>
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chi tiết tin tức</h4>
            
            <div class="detail-container">
                <div class="detail-item">
                    <span class="detail-label">Tiêu đề</span>
                    <div class="detail-value">@Html.DisplayFor(model => model.ten)</div>
                </div>

                <div class="detail-item">
                    <span class="detail-label">Ảnh đại diện</span>
                    <div class="detail-value">
                        @if (!string.IsNullOrEmpty(Model.thumbnail))
                        {
                            <img src="~/Areas/admin/Content/upload/img/news/@Model.thumbnail" alt="Thumbnail" style="max-width: 200px;" />
                        }
                    </div>
                </div>

                <div class="detail-item">
                    <span class="detail-label">Nội dung</span>
                    <div class="detail-value content-preview">@Html.Raw(Model.content)</div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.hide, "Hiển thị")
                    <div class="checkbox">
                        @Html.EditorFor(m => m.hide)
                        @Html.ValidationMessageFor(m => m.hide)
                    </div>
                </div>

                <div class="detail-item">
                    <span class="detail-label">Thứ tự</span>
                    <div class="detail-value">@Html.DisplayFor(model => model.order)</div>
                </div>

                <div class="detail-item">
                    <span class="detail-label">Ngày tạo</span>
                    <div class="detail-value">@Model.datebegin.ToString("dd/MM/yyyy HH:mm")</div>
                </div>
            </div>

            <div class="mt-4">
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.news_id }, new { @class = "btn btn-primary mr-2" })
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div> 