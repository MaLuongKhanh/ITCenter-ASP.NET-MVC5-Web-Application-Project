@model IEnumerable<WebApplication.Models.SoftwareStorage>
@foreach (var row in Model.OrderByDescending(x => x.ngaydang))
{
    <div class="preview-item border-bottom position-relative" data-id="@row.software_id">
        <div class="preview-thumbnail">
            <div class="preview-icon bg-primary">
                <i class="mdi mdi-file-document"></i>
            </div>
        </div>
        <div class="preview-item-content d-sm-flex flex-grow">
            <div class="flex-grow">
                <a href="@row.link" class="preview-subject" target="_blank"><h6>@row.ten</h6></a>
                <p class="text-muted mb-0">@row.mota</p>
            </div>
            <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                <p class="text-muted">@row.ngaydang</p>
            </div>
        </div>
        @if (row.mssv == Session["MSSV"]?.ToString())
        {
            <div class="action-buttons">
                <button class="btn-icon edit-software" data-id="@row.software_id" 
                        data-name="@row.ten" data-desc="@row.mota" data-link="@row.link">
                    <i class="mdi mdi-pencil text-info"></i>
                </button>
                <button class="btn-icon delete-software" data-id="@row.software_id">
                    <i class="mdi mdi-delete text-danger"></i>
                </button>
            </div>
        }
    </div>
}